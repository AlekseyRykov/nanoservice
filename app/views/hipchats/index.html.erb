<p id="notice"><%= notice %></p>

<h1>Hipchats</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hipchats.each do |hipchat| %>
      <tr>
        <td><%= hipchat.title %></td>
        <td><%= hipchat.description %></td>
        <td><%= hipchat.author %></td>
        <td><%= hipchat.article %></td>
        <td><%= link_to 'Show', hipchat %></td>
        <td><%= link_to 'Edit', edit_hipchat_path(hipchat) %></td>
        <td><%= link_to 'Destroy', hipchat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hipchat', new_hipchat_path %>
